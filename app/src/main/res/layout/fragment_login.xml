<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_login">
    <!-- ðŸ”¶ PARTE SUPERIOR CON GRADIENTE Y LOGO -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher_foreground" />
    </RelativeLayout>

    <!-- ðŸ”· PARTE INFERIOR BLANCA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_bottom"
        android:orientation="vertical"
        android:padding="@dimen/padding_lg">

        <!-- âœ‰ï¸ CORREO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_md"
            android:text="@string/login_title"
            android:textColor="@color/gold_title"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_field"
            android:hint="Correo electrÃ³nico"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="@dimen/padding_md"
            android:textColor="@color/carbon_black"
            android:textSize="@dimen/text_md" />

        <!-- ðŸ” CONTRASEÃ‘A -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/margin_md"
            android:background="@drawable/input_field"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/padding_md"
            android:textColor="@color/carbon_black"
            android:textSize="@dimen/text_md" />

        <!-- ðŸ”˜ BOTÃ“N LOGIN -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/margin_lg"
            android:background="@drawable/btn_login_background"
            android:gravity="center"

            android:text="@string/login_button"
            android:textColor="@color/white_pure"
            android:textSize="@dimen/button_text_size" />

        <!-- ðŸ”— LINK REGISTRO / RECUPERAR -->
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_md"
            android:text="Â¿No tienes cuenta? RegÃ­strate"
            android:textColor="@color/gold_title"
            android:textSize="@dimen/text_sm" />

    </LinearLayout>

</LinearLayout>
