<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_pure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPromos"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/gold_dark"
            app:navigationIcon="@drawable/ic_back">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cotálogo"
                android:textColor="@color/white_pure"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </androidx.appcompat.widget.Toolbar>

        <!-- LISTA DE COMERCIOS (CONFIGURADA POR CÓDIGO) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerComercios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:clipToPadding="false" />

    </LinearLayout>

    <!-- BOTÓN ASISTENTE AI -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAIAssistant"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/empty"
        app:tint="@color/white_pure"
        app:backgroundTint="@color/gold_dark" />
</FrameLayout>
