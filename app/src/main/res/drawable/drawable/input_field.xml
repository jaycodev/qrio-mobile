<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo blanco -->
    <solid android:color="@color/white_pure" />

    <!-- Bordes -->
    <stroke
        android:width="1dp"
        android:color="@color/text_muted" />

    <!-- Esquinas redondeadas -->
    <corners android:radius="12dp" />

    <!-- Padding interno (espaciado) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
