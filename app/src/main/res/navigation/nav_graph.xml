<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_login">

    <!-- LOGIN -->
    <fragment
        android:id="@+id/fragment_login"
        android:name="com.cibertec.qriomobile.LoginFragment"
        >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/fragment_register" />

    </fragment>


    <!-- HOME -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cibertec.qriomobile.HomeFragment"
     >

        <!-- Acci贸n hacia Perfil -->
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/fragment_profile" />

        <!-- Acci贸n hacia Comercio -->
        <action
            android:id="@+id/action_homeFragment_to_tradeFragment"
            app:destination="@id/fragment_trade" />

        <!-- Acci贸n hacia Catalogo -->
        <action
            android:id="@+id/action_homeFragment_to_catalogFragment"
            app:destination="@id/fragment_catalog" />

        <!-- Acci贸n hacia Ajustes -->
        <action
            android:id="@+id/action_homeFragment_to_promotionFragment"
            app:destination="@id/fragment_promotion" />

        <action
            android:id="@+id/action_homeFragment_to_detailPromotionFragment"
            app:destination="@id/fragment_detail_promotion" />
    </fragment>




    <!-- CATALOG LIST -->
    <fragment
        android:id="@+id/fragment_catalog"
        android:name="com.cibertec.qriomobile.CatalogFragment"
        android:label="Catalog">
        <argument
            android:name="branchId"
            app:argType="long"
            android:defaultValue="0L" />
        <argument
            android:name="tableNumber"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_catalogFragment_to_detailCatalogFragment"
            app:destination="@id/fragment_detail_catalog" />
    </fragment>

    <!-- CATALOG DETAIL -->

    <fragment
        android:id="@+id/fragment_detail_catalog"
        android:name="com.cibertec.qriomobile.DetailCatalogFragment"
        android:label="Catalog Detail">

        <argument
            android:name="id"
            app:argType="long" />

        <argument
            android:name="nombre"
            app:argType="string" />

        <argument
            android:name="descripcion"
            app:argType="string" />

        <argument
            android:name="precio"
            app:argType="float" />

        <argument
            android:name="imagen"
            app:argType="integer" />

    </fragment>

    <!-- CAR / CART -->
    <fragment
        android:id="@+id/fragment_car"
        android:name="com.cibertec.qriomobile.presentation.fragments.CarFragment"
        android:label="Car">
        <action
            android:id="@+id/action_carFragment_to_summaryStripeFragment"
            app:destination="@id/fragment_summary_stripe" />
    </fragment>


    <!-- PROMOTION LIST -->
    <fragment
        android:id="@+id/fragment_promotion"
        android:name="com.cibertec.qriomobile.PromotionFragment"
        android:label="Promotion">

        <argument
            android:name="restaurantId"
            app:argType="long"
            android:defaultValue="0L" />

        <action
            android:id="@+id/action_promotionFragment_to_detailPromotionFragment"
            app:destination="@id/fragment_detail_promotion" />
    </fragment>

    <!-- PROMOTION DETAIL -->
    <fragment
        android:id="@+id/fragment_detail_promotion"
        android:name="com.cibertec.qriomobile.DetailPromotionFragment"
        android:label="Promotion Detail">

        <argument
            android:name="promoId"
            app:argType="long" />

        <argument
            android:name="nombre"
            app:argType="string" />

        <argument
            android:name="precioFinal"
            app:argType="float" />

        <argument
            android:name="precioOriginal"
            app:argType="float" />

        <argument
            android:name="descuento"
            app:argType="integer" />

        <argument
            android:name="imagen"
            app:argType="integer" />
    </fragment>



    <!-- TRADE -->
    <fragment
        android:id="@+id/fragment_trade"
        android:name="com.cibertec.qriomobile.TradeFragment"
        android:label="Trade">
        <action
            android:id="@+id/action_tradeFragment_to_promotionFragment"
            app:destination="@id/fragment_promotion" />
    </fragment>

    <!-- PROFILE -->
    <fragment
        android:id="@+id/fragment_profile"
        android:name="com.cibertec.qriomobile.ProfileFragment"
        android:label="Profile" />

    <!-- REGISTER -->
    <fragment
        android:id="@+id/fragment_register"
        android:name="com.cibertec.qriomobile.RegisterFragment"
        android:label="Register" />

    <!-- SUMMARY / CHECKOUT -->
    <fragment
        android:id="@+id/fragment_summary_stripe"
        android:name="com.cibertec.qriomobile.presentation.fragments.SummaryStripeFragment"
        android:label="Summary">
        <action
            android:id="@+id/action_summaryStripeFragment_to_confirmationStripeFragment"
            app:destination="@id/fragment_confirmation_stripe" />
    </fragment>

    <!-- CONFIRMATION -->
    <fragment
        android:id="@+id/fragment_confirmation_stripe"
        android:name="com.cibertec.qriomobile.presentation.fragments.ConfirmationStripeFragment"
        android:label="Confirmation">
        <action
            android:id="@+id/action_confirmationStripeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
